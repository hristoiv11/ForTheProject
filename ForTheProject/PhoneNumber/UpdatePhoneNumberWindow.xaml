<Window x:Class="ForTheProject.UpdatePhoneNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForTheProject"
        mc:Ignorable="d"
        Title="UpdatePhoneNumberWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <Label Content="Phone Window"/>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="PhoneNumber:"/>
                <TextBox x:Name="phoneNumberTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Type:"/>
                <TextBox x:Name="typeTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="UpdateButton" Content="Update" Click="UpdateButton_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
