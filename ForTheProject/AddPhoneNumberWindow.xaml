<Window x:Class="ForTheProject.AddPhoneNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForTheProject"
        mc:Ignorable="d"
        Title="AddPhoneNumberWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" >
            <Label Content="Add Phone Number"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="PhoneNumber: "/>
                <TextBox x:Name="phoneNumberTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Type: "/>
                <TextBox x:Name="typeTextBox" />
            </StackPanel>

            <Button x:Name="AddButton" Content="Add" Click="AddButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
